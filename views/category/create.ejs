<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head') %>
    <title>FooDrink | Create Category</title>
  </head>
  <body>
    <%- include("../partials/_navbar", { activeNav : 'categories' }) %>

    <main class="flex-grow-1 main-content">
      <div class="my-5">
        <h1>Create Category</h1>
      </div>
      <div class="w-100 px-3 py-3 px-lg-5 py-lg-4 custom-border bg-theme-1">
        <form
          action="/categories/create"
          method="post"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >
          <!-- Input Category -->
          <div class="mb-3">
            <label for="name" class="form-label"> Category name </label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a name.</div>
          </div>

          <!-- Input Color -->
          <div class="mb-3">
            <label for="favcolor" class="form-label"> Color label </label>
            <input
              type="color"
              class="form-control p-3"
              style="width: 100px; height: 80px"
              id="favcolor"
              name="favcolor"
              value="#ff0000"
            />
          </div>

          <!-- Icon image -->
          <div class="mb-3">
            <label for="icon" class="form-label"> Icon </label>
            <input
              type="file"
              class="form-control"
              id="icon"
              name="iconImage"
              accept=".svg"
            />
            <div class="invalid-feedback" id="icon-error">
              File must be an SVG and max 15 KB.
            </div>
          </div>

          <button type="submit" class="btn btn-light w-100 mt-5">Submit</button>
        </form>
      </div>
    </main>

    <!-- jQuery (make sure it's loaded before this script) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
      $(function () {
        const $form = $(".needs-validation");
        const $iconInput = $("#icon");
        const $iconError = $("#icon-error");

        $iconInput.on("change", function () {
          const file = this.files[0];
          $iconInput.removeClass("is-invalid");

          if (file) {
            const isSvg = file.type === "image/svg+xml";
            const isSizeOk = file.size <= 15 * 1024;

            if (!isSvg || !isSizeOk) {
              $iconInput.addClass("is-invalid");
            }
          }
        });

        $form.on("submit", function (event) {
          const file = $iconInput[0].files[0];
          let fileValid = true;

          if (file) {
            const isSvg = file.type === "image/svg+xml";
            const isSizeOk = file.size <= 15 * 1024;

            if (!isSvg || !isSizeOk) {
              $iconInput.addClass("is-invalid");
              fileValid = false;
            } else {
              $iconInput.removeClass("is-invalid");
            }
          }

          if (this.checkValidity() === false || !fileValid) {
            event.preventDefault();
            event.stopPropagation();
          }

          $(this).addClass("was-validated");
        });
      });
    </script>
  </body>
</html>
