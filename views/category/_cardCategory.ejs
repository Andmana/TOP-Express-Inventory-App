<li
  class="card-category custom-border"
  style="
    --bg-color: <%= category.color || '#ccc' %>;
    --color: <%= getContrastColor(category.color || '#ccc') %>;
  "
>
  <a
    class="p-3 w-100 h-100 d-flex flex-column justify-content-between align-items-center text-decoration-none"
    href="/products?categories=<%= encodeURIComponent(category.name.toLowerCase() ) %>"
  >
    <img
      src="<%= encodeURIComponent(category.icon_src ? category.icon_src : '/icons/default.svg') %>"
      class="icons"
      alt="icon"
    />
    <span class="fs-4 fw-semibold text-center w-100 text-truncate"
      ><%= category.name %></span
    >
  </a>
</li>
