<li class="card-category" style="--color: <%= category.color || '#ccc' %>">
  <a
    class="p-3 w-100 h-100 d-flex flex-column justify-content-between align-items-center text-decoration-none"
    href="/products?categories=<%= encodeURIComponent(category.name.toLowerCase() ) %>"
  >
    <img
      src="<%= encodeURIComponent(category.icon ? `/icons/${category.icon}` : '/icons/default.svg') %>"
      class="icons"
      alt="icon"
    />
    <span class="fs-4 fw-semibold text-black text-center"
      ><%= category.name %></span
    >
  </a>
</li>
