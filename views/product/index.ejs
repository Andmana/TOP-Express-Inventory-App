<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Dependencies  header -->
    <%- include('../partials/_head') %>
    <title>FooDrink | Products</title>
  </head>
  <body class="min-vh-100 d-flex flex-column">
    <!-- Navbar -->
    <%- include("../partials/_navbar", { activeNav: 'products' }) %>

    <!-- Main -->
    <main class="flex-grow-1 main-content d-flex flex-column">
      <div class="mt-5 mb-4 d-flex align-items-center gap-4">
        <h1 class="inline">Categories</h1>
      </div>

      <div class="custom-container">
        <!-- sidebar filter -->
        <aside class="sidebar p-3 overflow-hidden">
          <form action="/products/get" class="overflow-hidden">
            <!-- Radio order -->
            <div class="mb-4">
              <label for="order" class="form-label fw-semibold"
                >Order by:</label
              >
              <div class="form-check m-0">
                <input
                  class="form-check-input"
                  type="radio"
                  name="order"
                  id="ascending"
                  value="asc"
                  checked
                />
                <label class="form-check-label" for="ascending"
                  >Ascending</label
                >
              </div>
              <div class="form-check m-0">
                <input
                  class="form-check-input"
                  type="radio"
                  name="order"
                  id="descending"
                  value="desc"
                />
                <label class="form-check-label" for="descending"
                  >Descending</label
                >
              </div>
            </div>

            <!-- Radio sort -->
            <div class="mb-4">
              <label for="sort" class="form-label fw-semibold">Sort by:</label>
              <div class="form-check m-0">
                <input
                  class="form-check-input"
                  type="radio"
                  name="sort"
                  id="name"
                  value="name"
                  checked
                />
                <label class="form-check-label" for="name">Name</label>
              </div>
              <div class="form-check m-0">
                <input
                  class="form-check-input"
                  type="radio"
                  name="sort"
                  id="price"
                  value="price"
                />
                <label class="form-check-label" for="price">Price</label>
              </div>
            </div>

            <!-- Checkbox Category -->
            <div class="mb-4">
              <label for="categories" class="form-label fw-semibold"
                >Filter by category:</label
              >

              <% categories.forEach(category => { %>
              <!-- Checkbox Category -->
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="<%= category.id %>"
                  id="<%= category.id %>"
                />
                <label
                  class="form-check-label w-auto text-truncate tags"
                  style="--bg-color: <%= category.color%>; max-width: 100%"
                  for="<%= category.id %>"
                >
                  <%= category.name %>
                </label>
              </div>
              <!--  -->
              <% }); %>
            </div>

            <!-- Form action -->
            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-light btn-sm py-2 rounded-5">
                <i class="bi bi-save me-2"></i>Apply filters
              </button>
            </div>
          </form>
        </aside>
        <div class=""></div>
      </div>
    </main>

    <!-- Footer -->
    <%- include("../partials/_footer") %>
  </body>
</html>
