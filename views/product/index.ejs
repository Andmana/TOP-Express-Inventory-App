<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Dependencies  header -->
    <%- include('../partials/_head') %>
    <title>FooDrink | Products</title>
  </head>
  <body class="min-vh-100 d-flex flex-column">
    <!-- Navbar -->
    <%- include("../partials/_navbar", { activeNav: 'products' }) %>

    <!-- Main -->
    <main class="flex-grow-1 main-content d-flex flex-column">
      <div class="mt-5 mb-4 d-flex align-items-center gap-4">
        <h1 class="">Products</h1>
        <a
          href="/products/create"
          class="btn btn-sm custom-border"
          style="background-color: rgba(var(--rgb-2), 0.7)"
          >+ add product</a
        >
      </div>

      <div class="custom-container">
        <!-- sidebar filter -->
        <%- include('./_sidebar', {categories, getContrastColor}) %>
        <!--  -->

        <!-- Product List -->
        <div class="p-3 w-100">
          <ul class="d-flex justify-content-evenly gap-2 flex-wrap">
            <% products.forEach(product => { %>
            <li class="mb-2">
              <%- include('./_cardProduct', {product, getContrastColor}) %>
            </li>
            <%}); %>
          </ul>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include("../partials/_footer") %>
  </body>
</html>
