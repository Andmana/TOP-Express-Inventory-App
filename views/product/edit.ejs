<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head') %>
    <title>Edit <%= product.name %></title>
  </head>
  <body>
    <%- include("../partials/_navbar", { activeNav: '' }) %>

    <main class="flex-grow-1 main-content d-flex flex-column">
      <div class="mt-5 mb-4 d-flex align-items-center gap-4">
        <a class="inline btn btn-sm" href="/products/<%= product.id %>" style="background-color: rgba(var(--rgb-2), 0.3);">
          &lt;&lt; Back to Products
        </a>
      </div>

      <div class="detail-product-container">
        <div class="flex justify-content-center align-content-center p-3">
          <img class="product-image" src="<%= product.icon_src %>" alt="Product">
        </div>

        <div class="w-100 p-3 d-flex flex-column gap-3">
          <form
            action="/products/edit"
            method="post"
            enctype="multipart/form-data"
            class="needs-validation"
            novalidate
          >
            <!-- Product  id -->
            <input type="text" name="id" id="id" value="<%= product.id %>" hidden>
            
            <!-- Product Name -->
            <div class="mb-3">
              <label for="name" class="form-label fw-semibold">Product Name:</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                value="<%= product.name %>"
                class="form-control <%= typeof error !== 'undefined' && error?.name ? 'is-invalid' : '' %>"
              />
              <div class="invalid-feedback">Please provide a valid product name.</div>
              <% if (typeof error !== 'undefined' && error?.name) { %>
              <div class="error-validation text-danger"><%= error.name %></div>
              <% } %>
            </div>

            <!-- Category -->
            <div class="mb-3">
              <label for="category_select" class="form-label">Category:</label>
              <select
                id="category_select"
                name="category_id"
                required
                class="form-select <%= typeof error !== 'undefined' && error?.category_id ? 'is-invalid' : '' %>"
              >
                <% categories.forEach(category => { %>
                  <option value="<%= category.id %>" <%= category.id === product.category_id ? "selected" : "" %>>
                    <%= category.name %>
                  </option>
                <% }) %>
              </select>
              <div class="invalid-feedback">Please select a category.</div>
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label fw-semibold">Price:</label>
              <input
                type="number"
                id="price"
                name="price"
                min="0"
                step="0.01"
                required
                value="<%= product.price %>"
                class="form-control <%= typeof error !== 'undefined' && error?.price ? 'is-invalid' : '' %>"
              />
              <div class="invalid-feedback">Please provide a valid price.</div>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
              <label for="quantity" class="form-label fw-semibold">Quantity:</label>
              <input
                type="number"
                id="quantity"
                name="quantity"
                min="0"
                required
                value="<%= product.quantity %>"
                class="form-control <%= typeof error !== 'undefined' && error?.quantity ? 'is-invalid' : '' %>"
              />
              <div class="invalid-feedback">Please provide a valid quantity.</div>
            </div>

            <!-- Brand -->
            <div class="mb-3">
              <label for="brand" class="form-label fw-semibold">Brand:</label>
              <input
                type="text"
                id="brand"
                name="brand"
                value="<%= product.Brand %>"
                class="form-control <%= typeof error !== 'undefined' && error?.Brand ? 'is-invalid' : '' %>"
              />
              <div class="invalid-feedback">Please provide a valid brand.</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label fw-semibold">Description:</label>
              <textarea
                id="description"
                name="description"
                required
                rows="4"
                class="form-control <%= typeof error !== 'undefined' && error?.description ? 'is-invalid' : '' %>"
              ><%= product.description %></textarea>
              <div class="invalid-feedback">Please provide a description.</div>
            </div>

            <!-- Icon Upload -->
            <div class="mb-3">
              <label for="icon_src" class="form-label fw-semibold">Icon (SVG only):</label>
              <input
                type="file"
                class="form-control"
                id="icon"
                name="icon"
                accept=".svg"
              />
              <div class="form-text">Maximum file size: 15KB</div>
            </div>

            <!-- Buttons -->
            <div class="pt-4 d-flex justify-content-end gap-3">
              <button type="submit" class="btn btn-primary px-3">Save Changes</button>
              <a class="btn btn-secondary px-3" href="/products/<%= product.id %>">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </main>

    <!-- Validation Script -->
    <script>
      $(document).ready(function () {
        const $form = $(".needs-validation");
        const $iconInput = $("#icon_src");

        $iconInput.on("change", function () {
          const file = this.files[0];
          const $errorMsg = $(this).nextAll(".error-validation").first();

          if ($errorMsg.length) $errorMsg.remove();
          $(this).removeClass("is-invalid");

          if (file) {
            const isValidType = file.type === "image/svg+xml";
            const isValidSize = file.size <= 15 * 1024;

            if (!isValidType || !isValidSize) {
              $(this).addClass("is-invalid");
              let errorText = "Invalid file: ";
              if (!isValidType) errorText += "must be SVG";
              if (!isValidSize) errorText += (isValidType ? "" : " and ") + "max 15KB";

              $(this).after(`<div class="error-validation text-danger mt-1">${errorText}</div>`);
            }
          }
        });

        $form.on("submit", function (event) {
          let isValid = true;
          const file = $iconInput[0].files[0];

          if (file) {
            const isValidType = file.type === "image/svg+xml";
            const isValidSize = file.size <= 15 * 1024;

            if (!isValidType || !isValidSize) {
              $iconInput.addClass("is-invalid");
              isValid = false;
            }
          }

          if (!this.checkValidity() || !isValid) {
            event.preventDefault();
            event.stopPropagation();
          }

          $(this).addClass("was-validated");
        });
      });
    </script>
  </body>
</html>
