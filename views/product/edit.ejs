<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/_head') %>
    <title>Edit <%= product.name %></title>
  </head>
  <body>
    <%- include("../partials/_navbar", { activeNav: '' }) %>

    <main class="flex-grow-1 main-content">
      <div class="mt-5 mb-4 d-flex align-items-center gap-4">
        <a
          href="/products"
          class="btn btn-sm custom-border"
          style="background-color: var(--color-theme-1)"
        >
          &lt;&lt; Back to Products
        </a>
        <h1>Edit Product</h1>
      </div>

      <div class="w-100 px-3 py-3 px-lg-5 py-lg-4 custom-border bg-theme-1">
        <form
          action="/products/edit/<%= product.id %>"
          method="post"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >
          <!-- Name -->
          <div class="mb-4">
            <label for="name" class="form-label fw-semibold"
              >Product Name:</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="form-control <%= typeof error !== 'undefined' && error?.name? 'is-invalid' : '' %>"
              required
              value="<%= product.name %>"
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a product name.</div>
            <% if (typeof error !== 'undefined' && error?.name) { %>
            <div class="error-validation text-danger"><%= error.name %></div>
            <% } %>
          </div>

          <!-- Price -->
          <div class="mb-4">
            <label for="price" class="form-label fw-semibold">Price:</label>
            <input
              type="number"
              id="price"
              name="price"
              min="0"
              step="0.01"
              class="form-control"
              required
              value="<%= product.price %>"
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a valid price.</div>
          </div>

          <!-- Quantity -->
          <div class="mb-4">
            <label for="quantity" class="form-label fw-semibold"
              >Quantity:</label
            >
            <input
              type="number"
              id="quantity"
              name="quantity"
              min="0"
              class="form-control"
              required
              value="<%= product.quantity %>"
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a valid quantity.</div>
          </div>

          <!-- Brand -->
          <div class="mb-4">
            <label for="Brand" class="form-label fw-semibold">Brand:</label>
            <input
              type="text"
              id="Brand"
              name="Brand"
              class="form-control"
              value="<%= product.Brand %>"
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Select Category  -->
          <div class="mb-3">
            <label for="category_select" class="form-label">Category : </label>
            <select
              class="form-select form-select mb-3 <%= typeof error !== 'undefined' && error?.category_id? 'is-invalid' : '' %>"
              name="category_id"
              required
            >
              <% categories.forEach(category => { %>
               <option value="<%= category.id %>" <%= category.id === product.category_id ? "selected" : "" %>>
                  <%= category.name %>
              </option>
              <% }); %>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please select category.</div>
          </div>

          <!-- Description -->
          <div class="mb-4">
            <label for="description" class="form-label fw-semibold"
              >Description:</label
            > 
            <textarea
              id="description"
              name="description"
              class="form-control"
              rows="4"
              required
            >
<%= product.description %></textarea
            >
          </div>

          <!-- Category color -->
          <div class="mb-4">
            <label for="category_color" class="form-label fw-semibold"
              >Category Color (hex or rgb):</label
            >
            <input
              type="text"
              id="category_color"
              name="category_color"
              class="form-control"
              value="<%= product.category_color %>"
            />
          </div>

          <!-- Icon Upload -->
          <div class="mb-4">
            <label for="icon_src" class="form-label fw-semibold"
              >Icon (SVG only):</label
            >
            <input
              type="file"
              id="icon_src"
              name="icon_src"
              class="form-control"
              accept=".svg"
            />
            <div class="form-text">Maximum file size: 15KB</div>
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-end gap-3 pt-4">
            <button type="submit" class="btn btn-primary px-3">
              Save Changes
            </button>
            <a class="btn btn-secondary px-3" href="/products/<%= product.id %>"
              >Cancel</a
            >
          </div>
        </form>
      </div>
    </main>

    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Client-side validation script -->
    <script>
      $(document).ready(function () {
        const $form = $(".needs-validation");
        const $iconInput = $("#icon_src");

        // File validation
        $iconInput.on("change", function () {
          const file = this.files[0];
          const $errorMsg = $(this).nextAll(".error-validation").first();

          if ($errorMsg.length) $errorMsg.remove();
          $(this).removeClass("is-invalid");

          if (file) {
            const isValidType = file.type === "image/svg+xml";
            const isValidSize = file.size <= 15 * 1024;

            if (!isValidType || !isValidSize) {
              $(this).addClass("is-invalid");
              let errorText = "Invalid file: ";
              if (!isValidType) errorText += "must be SVG";
              if (!isValidSize)
                errorText += (isValidType ? "" : " and ") + "max 15KB";

              $(this).after(
                `<div class="error-validation text-danger mt-1">${errorText}</div>`
              );
            }
          }
        });

        // Form submit validation
        $form.on("submit", function (event) {
          let isValid = true;

          const file = $iconInput[0].files[0];
          if (file) {
            const isValidType = file.type === "image/svg+xml";
            const isValidSize = file.size <= 15 * 1024;

            if (!isValidType || !isValidSize) {
              $iconInput.addClass("is-invalid");
              isValid = false;
            }
          }

          if (!this.checkValidity() || !isValid) {
            event.preventDefault();
            event.stopPropagation();
          }

          $(this).addClass("was-validated");
        });
      });
    </script>
  </body>
</html>
